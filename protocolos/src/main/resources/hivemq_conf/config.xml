<hivemq>

    <listeners>
        <tcp-listener>
            <port>1883</port>
            <bind-address>127.0.0.1</bind-address>
            <name>same-machine-listener-port-1883</name>
        </tcp-listener>
    </listeners>
    <mqtt>

        <queued-messages>
            <max-queue-size>10</max-queue-size>
            <strategy>discard</strategy>
        </queued-messages>

        <topic-alias>
            <enabled>true</enabled>
            <max-per-client>2</max-per-client>
        </topic-alias>

        <message-expiry>
            <max-interval>10</max-interval> <!-- 10 seconds -->
        </message-expiry>

        <session-expiry>
            <max-interval>10</max-interval> <!-- 10 seconds -->
        </session-expiry>

        <keep-alive>
            <allow-unlimited>true</allow-unlimited>
            <max-keep-alive>4</max-keep-alive>
        </keep-alive>

        <packets>
            <max-packet-size>1048576</max-packet-size> <!-- 1 MB -->
        </packets>

        <receive-maximum>
            <server-receive-maximum>4</server-receive-maximum>
        </receive-maximum>

        <quality-of-service>
            <max-qos>2</max-qos>
        </quality-of-service>

        <wildcard-subscriptions>
            <enabled>true</enabled>
        </wildcard-subscriptions>

        <shared-subscriptions>
            <enabled>true</enabled>
        </shared-subscriptions>

        <subscription-identifier>
            <enabled>true</enabled>
        </subscription-identifier>

    </mqtt>

    <restrictions>
        <max-connections>5</max-connections>
    </restrictions>

    <persistence>
        <mode>in-memory</mode>
    </persistence>
</hivemq>